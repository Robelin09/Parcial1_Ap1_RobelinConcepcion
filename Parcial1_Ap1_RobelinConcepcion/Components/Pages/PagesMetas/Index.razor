@page "/IndexMeta"
@page "/IndexMeta/{MetaId:int}"
@inject MetaService metaservice
@rendermode InteractiveServer

<div class="card">
    <div class="card-header">
        <h3>Detalles de tus Metas</h3>
        <a href="/CreateMeta" class="btn btn-outline-primary">Añadir</a>
    </div>
    <div class="card-body">      
        <br />
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>MetaId</th>
                        <th>Fecha</th>
                        <th>Descripci&oacuten</th>
                        <th>Monto</th>
                        <th>Editar</th>
                        <th>Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var meta in ListaMetas)
                    {
                        <tr>
                            <td>@meta.MetaId</td>
                            <td>@meta.Fecha</td>
                            <td>@meta.Descripción</td>
                            <td>@meta.Monto.ToString("N2")</td>
                            <td><a href="/EditMeta/@meta.MetaId" class="bi bi-pencil-square"></a></td>
                            <td><a href="/DeleteMeta/@meta.MetaId" class="bi bi-trash"></a></td>
                        </tr>
                    }               
                </tbody>
            </table>
        </div>
    </div>
</div>
@code {
    [Parameter]
    public int MetaId { get; set; }
    public Metas meta { get; set; } = new Metas();
    public List<Metas> ListaMetas { get; set; } = new List<Metas>();
    
    public decimal MontoTotal { get; set; }

    protected override async Task OnInitializedAsync()
    {
        ListaMetas = await metaservice.Listar(t => true);
    }
}